<h1 class="col-12 text-center"> Sign in to your account </h1>

<div class="container">
<%= form_with(scope: :login, url: login_path, local: true, class: "form-signin" ) do |form| %>
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <div class="form-group">
    <%= form.email_field :email, class: "form-control col-6", placeholder: "Email address" %>
  </div>
  <div class="form-group row">
    <%= form.password_field :password, class: "form-control col-6", placeholder: "Password" %>
  </div>
  <%= form.button "Update customer details", class: "btn btn-lg btn-info btn-block col-6" %>
<% end %>
</div>
