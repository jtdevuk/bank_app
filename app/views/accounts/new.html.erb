<%= render '/shared/errors', obj: @account %>

<h1 class="col-12 text-center">Open a new account</h1>

<div class="row justify-content-center">
  <%= form_with model: @account, class: "col-6 bg-light p-5", local: true do |f| %>
    <div class="form-group row justify-content-center">
      <h3>Account details</h3>
    </div>
    <div class="form-group row">
      <p><%= f.radio_button :account_name, 'Current Account' %> Current Account</p>
    </div>
    <div class="form-group row">
      <p><%= f.radio_button :account_name, 'Savings Account' %> Savings Account</p>
    </div>
    <div class="form-group row">
      <%= f.number_field :account_balance, step: :any, placeholder: "Initial deposit" %>
    </div>
    <div class="form-group row">
      <%= f.submit %>
    </div>
  <% end %>
</div>
