<h1>Open a new account</h1>

<%= form_with model: @account, local: true do |f| %>
<h3>Account details</h3>
<div class="form-group row">
  <p><%= f.radio_button :account_name, 'Current Account' %> Current Account</p>
</div>
<div class="form-group row">
  <p><%= f.radio_button :account_name, 'Savings Account' %> Savings Account</p>
</div>
<div class="form-group row">
<%= f.number_field :account_balance, placeholder: "Initial deposit" %>
</div>
<div class="form-group row">
<%= f.submit %>
</div>
<% end %>
