<%= render '/shared/errors', obj: @customer %>

<h1 class="col-12 text-center"> Edit customer details </h1>

<%= form_with(model: @customer, local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :first_name, class: "col-2" %>
    <%= form.text_field :first_name, class: "form-control col-6" %>
  </div>
  <div class="form-group row">
    <%= form.label :last_name, class: "col-2" %>
    <%= form.text_field :last_name, class: "form-control col-6" %>
  </div>
  <div class="form-group row">
    <%= form.label :email, class: "col-2" %>
    <%= form.email_field :email, class: "form-control col-6" %>
  </div>
  <div class="form-group row">
    <%= form.label :password, class: "col-2" %>
    <%= form.password_field :password, class: "form-control col-6" %>
  </div>
  <%= form.submit "Update customer details", class: "btn btn-info btn-primary" %>
<% end %>
